<div class="page-content">

<h1>Attendance for <%= Time.now.in_time_zone('Central Time (US & Canada)').strftime("%m-%d-%Y") %></h1>
<table>
  <tr>
    <th>Student Email</th>
    <th>Card Number</th>
  </tr>

  <tr>To edit a student, click the student's card number.</tr>
  <br>
   <%= link_to 'Back to Courses', courses_path %>

  <% @course.cards.each do |card| %>
    <tr>
      <td><%= card.email %></td>
      <td><%= card.code %></td>      
      <td><%#= link_to 'Remove', course_day_card_path(card, @course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Remove', course_day_card_path(@course, @day, card),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table><br>
</div>