<div class="page-content">

<div>
    <h1>
        <% @name = "" %>
        <% if @card.preferredname.nil? or @card.preferredname.empty? %>
            <% @name = @card.firstname %>
        <% else %>
            <% @name = @card.preferredname %>
        <% end %>
        Howdy, <%= @name %>!
    </h1>
    <div>
        <p><%= @name %> <%= @card.lastname %>, you are currently <strong>not registered</strong> in this course.</p>
        <p>Please consult with your instructor. Swipe-in again when your instructor has added your email to the class roster.</p>
    </div>
</div>

<!-- this is the timer for the redirect -->
<head>
    <script src="jquery-3.4.1.min.js"></script>
</head>
<script>
    (function () {
        setTimeout(function () {
            history.back();
        }, 5000);
    })();
</script>

</div>