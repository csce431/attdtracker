<%= form_with(model: @teacher, local: true) do |form| %>
    <% if @teacher.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@teacher.errors.count, "error") %> <%#prohibited this teacher from being saved:%>
            </h2>
            <ul>
                <% @teacher.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= form.label "First Name" %><br>
        <%= form.text_field :fname %>
    </p>
    <p>
        <%= form.label "Middle Name" %><br>
        <%= form.text_field :mname %>
    </p>
    <p>
        <%= form.label "Last Name" %><br>
        <%= form.text_field :lname %>
    </p>
    <p>
        <%= form.label "TAMU E-mail" %><br>
        <%= form.text_field :email %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>