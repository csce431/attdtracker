<!-- Link to new if now alreayd in database, otherwise, link to UIN_new -->

<div class="page-content">

<h1>Attendance for <%= @course.name%><%= " " %><%= @course.number%></h1> 
<p>
    <%= link_to_if(!@tookattendance, "Take Attendance!", new_course_day_path) do
     link_to("Take Attendance!", new_course_day_card_path(@course, @day))
   end
    %>
</p>
<p>
    Current Time: <em><%= @time %></em>
    <br>
</p>
<%= link_to 'Back', courses_path %>

<% @classday %>

<table class="attd">
    <tr>
        <th>Name</th>
        <% @days.each do |day| %>
            <th><%= day.classday %></th>
        <% end %>
    </tr>
    <% @students.each do |student| %>
    <tr>
        <td class="name">
            <% if @courses.ids.include? @course.id %>
                <%= student.fname %>  <%= student.lname %>
        </td>
			    <% @days.each do |day| %>
					<% @cards.each do |card| %>
                        <% if card.email == student.email %>
                            <%if card.day_ids.include? day.id %>
								<td class="green"><%="HERE"%></td>
							<% else %>                        
								<td class="red"><%="ABSENT"%></td>
							<% end %>
                        <% end %>
                    <% end %>
                <% end %>
            <% end %>
    </tr>
    <% end %>
</table>

</div>