<div class="page-content">

<h1>Listing Instructors</h1>

<p>
  <%= link_to ('<i class="fa fa-user-plus" title="Add Instructor"></i>').html_safe, new_teacher_path %> | 
  <%= link_to 'Back', admins_path %>
</p>

<% unless @teachers.blank? %>

<p>
  <%= form_tag teachers_path, :method => :get do %>
    <% @all_departments.each do |department| %>
      <%= check_box_tag "departments[#{department}]", 1, @current_departments.include?(department), :id => "departments_#{department}" %>
      <%= department %>
    <% end %><br>
    <%= submit_tag 'Filter', class: 'btn btn-info', title: "Filter by Department" %>
  <% end %>
</p>

<table>
  <tr>
    
  </tr>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
  </tr>

  <% @teachers.each do |teacher| %>
    <tr>
      <td title="View Instructor"><%= link_to teacher.lname + ", " + teacher.fname, teacher_path(teacher) %></td>
      <td><%= teacher.email %></td>
      <td><%= teacher.department %></td>
    </tr>
  <% end %>
</table>

<% else %>
  <br><%= "There are currently no instructors listed. Please add an instructor to begin." %>
<% end %>

</div>