<div class="page-content">

<h1>Edit Student</h1>
<%= form_with(model: @student, local: true) do |form| %>
 
  <div>
    <div><%= form.label :text, "Edit name" %></div>
    <div><%= form.text_field :name %></div>
  </div>
  <br>

  <div>
    <%= form.submit "Update" %>
  </div><br>

<% end %>

<%= link_to 'Back', student_path %>
</div>