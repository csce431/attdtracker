<div class="page-content">

<h1>Edit Student</h1>
<%= form_with(model: @student, local: true) do |form| %>
 
  <div>
    <div><%= form.text_field :fname, :required => true, placeholder: "First Name" %></div>
    <div><%= form.text_field :mname, placeholder: "Middle Name" %></div>
    <div><%= form.text_field :lname, :required => true, placeholder: "Last Name" %></div>
    <div><%= form.text_field :prefname, placeholder: "Preferred Name" %></div>
    <div><%= form.text_field :email, :required => true, placeholder: "Student Email" %></div>
    <div><%= form.text_field :card_num, placeholder: "Use card swiper here" %></div>
  </div>
  <br>

  <div>
    <%= form.submit "Update" %>
  </div><br>

<% end %>

<%= link_to 'Back', :back %>
</div>