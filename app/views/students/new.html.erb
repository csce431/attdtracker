<div class="page-content">

<h1>New Student</h1>

<%= form_with model: @student, url: course_students_path, html: {autocomplete: 'off'}, local: true do |form| %>
 
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@student.errors.count, "error") %> prohibited
        this student from being saved:
      </h3>
      <div>
        <% @student.errors.messages.each do |msg| %>
          <p><%= msg[1][0] %></p>
        <% end %>
      </div>
    </div>
    <br>
  <% end %>

  <div>
    <% if @isAdmin %>
      <%= form.text_field :fname, :required => true,  placeholder: "First Name" %>
    <% else %>
      <%= form.text_field :fname, placeholder: "First Name" %>
    <% end %>
  </div>
  <div><%= form.text_field :mname, placeholder: "Middle Name" %></div>
  <div>
    <% if @isAdmin %>
      <%= form.text_field :lname, :required => true,  placeholder: "Last Name" %>
    <% else %>
      <%= form.text_field :lname, placeholder: "Last Name" %>
    <% end %>
  </div>
  <div><%= form.text_field :prefname, placeholder: "Preferred Name" %></div>
  <div><%= form.text_field :email, :required => true, placeholder: "TAMU E-mail" %></div>
  <br>
  
  <p>
    <%= form.submit "Add Student" %>
  </p>
  
  <%= link_to 'Back', :back %>
 
<% end %>

</div>