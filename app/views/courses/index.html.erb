<div class="page-content">

<h1>Listing Courses</h1>
 
<%= link_to 'Add Course', new_teacher_course_path %>

  <p>
    <%= form_tag teacher_courses_path, :method => :get do %>
    Filter:    
    <% @all_years.each do |year| %>
      <%= check_box_tag "years[#{year}]", :id => "years_#{year}" %>
      <%= year %>
    <% end %> 
  </p>

  
  <p>
    <% @all_seasons.each do |season| %>
      <%= check_box_tag "seasons[#{season}]", :id => "seasons_#{season}" %>
      <%= season %>
    <% end %>
  </p>
  
  <%= submit_tag 'Refresh' %>
  <% end %>



<table>
  <tr>
    
  </tr>
  <tr>
    <th>Course</th>
    <th>Year</th>
    <th>Semester</th>
    <th style="color: #FFFFFF">Attendance</th>
    <th style="color: #FFFFFF">Enrollment</th>
    <th style="color: #FFFFFF">Edit</th>
    <th style="color: #FFFFFF">Delete</th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %> <%= course.number %>-<%= course.section %></td>
      <td><%= course.year %></td>
      <td><%= course.season %></td>
      <td><%= link_to 'Attendance', teacher_course_days_path(@teacher, course) %></td>
      <td><%= link_to 'Enrollment', teacher_course_path(@teacher, course) %></td>
      <td><%= link_to 'Edit', edit_teacher_course_path(@teacher, course) %></td>
      <td><%= link_to 'Delete', teacher_course_path(@teacher, course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</div>