<div class="page-content">

<h1>Listing Courses</h1>
 
<%= link_to 'Add Course', new_course_path %>
 
<table>
  <tr>
    <th>Department</th>
    <th>Number</th>
    <th>Section</th>
    <th style="color: #FFFFFF">Attendance</th>
    <th style="color: #FFFFFF">Enrollment</th>
    <th style="color: #FFFFFF">Edit</th>
    <th style="color: #FFFFFF">Delete</th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.number %></td>
      <td><%= course.section %></td>
      <td><%= link_to 'Attendance', course_days_path(course) %></td>
      <td><%= link_to 'Enrollment', course_path(course) %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Delete', course_path(course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</div>