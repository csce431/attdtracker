<div class="page-content">

<p>
  <h1>Enrollment for <%= @course.name + " " + @course.section.to_s %></h1>
  <%= link_to 'Edit Course', edit_course_path(@course) %><br>
  <%= link_to 'Add Student', new_course_student_path(@course) %><br>
  <%= link_to 'Back to Courses', courses_path %>
</p>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>View</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>List of Courses</th>
    <th></th>
  </tr>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.fname %></td>
      <td><%= student.lname %></td>
      <td><%= student.email %></td>
      <td><%= link_to 'View', student_path(student) %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Delete', student_path(student, @course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td>
        <% student.courses.each do |c| %>
          <%= c.name %><%= c.section %> 
        <% end %></td>
    </tr>
    
  <% end %>
</table>

</div>