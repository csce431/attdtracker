<div class="page-content">
<h1>Edit Admin</h1>

<%= form_with(model: @admin, local: true) do |form| %>
 
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:
      </h4>
      <div>
        <% @admin.errors.messages.each do |msg| %>
          <p><%= msg[1][0] %></p>
        <% end %>
      </div>
    </div>
  <% end %>
 
  <div><%= form.text_field :fname, placeholder: "First Name" %></div>
  <div><%= form.text_field :mname, placeholder: "Middle Name" %></div>
  <div><%= form.text_field :lname, placeholder: "Last Name" %></div>
  <div><%= form.text_field :email, :required => true, placeholder: "E-mail" %></div>
  <br>
  
  <p>
    <%= form.submit %>
  </p>

<% end %>
<p><%= link_to ('<i class="fas fa-trash" title="Remove Admin"></i>').html_safe, admin_path(@admin),
              method: :delete,
              data: { confirm: 'Are you sure you want to remove this admin?' } %> | 
<%= link_to 'Back', admins_path %></p>

</div>